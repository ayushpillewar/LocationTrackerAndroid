<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme for Android 12+ -->
    <style name="Theme.LocationTracker.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/accent_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Android 12+ Splash Screen API attributes -->
        <item name="android:windowSplashScreenBackground">@color/surface_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/home_image</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>

        <!-- Fallback background -->
        <item name="android:windowBackground">@drawable/home_image_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

